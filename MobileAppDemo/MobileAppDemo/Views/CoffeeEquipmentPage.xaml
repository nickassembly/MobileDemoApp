             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="White">

    <Grid RowDefinitions="*,Auto, Auto, *">

        <Label
                x:Name="LabelCount"
                Grid.Row="1"
                HorizontalOptions="Center" 
                FontSize="Large"
                Text="Click Me" 
               />
        
